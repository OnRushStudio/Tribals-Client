{
  "name": "tribalsclient",
  "version": "1.0.3",
  "description": "Official Tribals.io Client!",
  "main": "./app/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --w --x64 -p never",
    "deploy": "electron-builder build --x64 -p always",
    "dist": "electron-builder -p always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaHumanREAL/TribalsClient.git"
  },
  "author": "OnRush Studio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MetaHumanREAL/TribalsClient/issues"
  },
  "build": {
    "appId": "com.tribals.client",
    "productName": "Tribals.io",
    "asar": true,
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!.eslintrc.yml",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml,.github}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!dev-app-update.yml"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    },
    "publish": {
      "provider": "github",
      "owner": "OnRushStudio",
      "repo": "TribalsClient"
    }
  },
  "devDependencies": {
    "electron": "^10.4.7",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2",
    "v8-compile-cache": "^2.3.0"
  }
}
