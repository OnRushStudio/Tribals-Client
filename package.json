{
  "name": "tribalsclient",
  "version": "1.0.2",
  "description": "",
  "main": "./app/index.js",
  "scripts": {
    "start": "electron .",
    "buildwin": "electron-builder build --win  --x64 --ia32 --publish never",
    "deploywin": "electron-builder build --win --x64 --ia32 --publish always",
    "buildmac": "electron-builder build --mac  --x64 --ia32 --publish never",
    "deploymac": "electron-builder build --mac --x64 --ia32 --publish always",
    "dist": "electron-builder -p always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaHumanREAL/TribalsClient.git"
  },
  "author": "OnRush Studio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MetaHumanREAL/TribalsClient/issues"
  },
  "homepage": "https://github.com/MetaHumanREAL/TribalsClient#readme",
  "build": {
    "appId": "com.tribals.client",
    "productName": "Tribals.io",
    "asar": true,
    "files": [
      "./src/**/*",
      "./node_modules/**/*",
      "./index.js"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    },
    "publish": {
      "provider": "github",
      "owner": "MetaHumanREAL",
      "repo": "TribalsClient"
    }
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "v8-compile-cache": "^2.3.0"
  },
  "devDependencies": {
    "electron": "^9.4.4",
    "electron-builder": "^23.6.0"
  }
}
